<c74object name="av.cross3~">

	<digest>
		Split the signal into low, mid and high bands
	</digest>

	<description>
		2 crossover filters that together output a low, mid and high band of the frequency spectrum as a signal. Set the cross-over cutoff frequencies in Hz via inlets or with arguments.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<objarg name="low-mid-crossover" optional="1" type="float">
			<digest>
				Crossover frequency between low and mid band (default = 150 Hz)
			</digest>
			<description>
				Crossover frequency between low and mid band (default = 150 Hz)
			</description>
		</objarg>
		<objarg name="mid-high-crossover" optional="1" type="float">
			<digest>
				Crossover frequency between mid and high band (default = 2500 Hz)
			</digest>
			<description>
				Crossover frequency between mid and high band (default = 2500 Hz)
			</description>
		</objarg>
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="float">
			<arglist>
				<arg name="float" optional="1" type="float" />
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				Function depends on inlet. <br/>
				<br/>
				Inlet 1: none <br/>
				Inlet 2: Set the crossover frequency for low-mid in Hz <br/>
				Inlet 3: Set the crossover frequency for mid-high in Hz <br/>
			</description>
		</method>
		<method name="int">
			<arglist>
				<arg name="int" optional="1" type="int" />
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				Function depends on inlet. <br/>
				<br/>
				Inlet 1: none <br/>
				Inlet 2: Set the crossover frequency for low-mid in Hz <br/>
				Inlet 3: Set the crossover frequency for mid-high in Hz <br/>
			</description>
		</method>
		<method name="signal">
			<arglist>
				<arg name="signal" optional="1" type="signal" />
			</arglist>
			<digest>
				Signal to split into bands
			</digest>
			<description>
				Signal to split into bands
			</description>
		</method>
	</methodlist>

