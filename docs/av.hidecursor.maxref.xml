<c74object name="av.hidecursor">

	<digest>
		Hide the cursor when idle
	</digest>

	<description>
		Hide the cursor automatically when the mouse is idle for a specified amount of time. Useful to make sure you can't accidentally leave your mouse on the jitter window during a performance and have it be visible.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<objarg name="idle-time" optional="1" type="int">
			<digest>
				Hide cursor of this time in milliseconds (default = 5000)
			</digest>
			<description>
				Hide cursor of this time in milliseconds (default = 5000)
			</description>
		</objarg>
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="int">
			<arglist>
				<arg name="int" optional="1" type="int" />
			</arglist>
			<digest>
				Enable/disable the object
			</digest>
			<description>
				Enable/disable the object
			</description>
		</method>
	</methodlist>

