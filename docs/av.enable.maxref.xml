<c74object name="av.enable">

	<digest>
		Enable/disable processing of a pix/slab shader
	</digest>

	<description>
		Enable/disable the processing of a jit.gl.pix or jit.gl.slab object. Either process by outputtting through right outlet or bypass it by using the left outlet. A toggle enables or disables it.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<objarg name="enable" optional="1" type="int">
			<digest>
				Enable/disable the processing on load (default = 1)
			</digest>
			<description>
				Enable/disable the processing on load (default = 1)
			</description>
		</objarg>
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="int">
			<arglist>
				<arg name="int" optional="1" type="int" />
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				Function depends on inlet. <br/>
				<br/>
				Inlet 1: Enable/disable shader processing <br/>
				Inlet 2: Nothing <br/>
			</description>
		</method>
		<method name="texture">
			<arglist>
				<arg name="texture" optional="1" type="jit_gl_texture" />
			</arglist>
			<digest>
				Function depends on inlet
			</digest>
			<description>
				Function depends on inlet. <br/>
				<br/>
				Inlet 1: Nothing <br/>
				Inlet 2: Texture to be processed or passed through
			</description>
		</method>
	</methodlist>

