<c74object name="av.sync~">

	<digest>
		Synchronize sound and visual recording in post production
	</digest>

	<description>
		Inspired after the clapper board, used in film recording at the beginning of a take to afterwards synchronize image with sound.

		A short burst of noise at -18 dBFS combined with a white flash on the jitter window from a videoplane. Useful when recording visuals and sound separately and you like to manually align them afterwards in a video editting tool.

		Use the render bang to control. Needs audio to be on.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<objarg name="burst-length" optional="1" type='int'>
			<arglist>
				<arg name="burst-length" optional="1" type="int" />
			</arglist>
			<digest>
				The burst length in milliseconds (default = 100)
			</digest>
			<description>
				The burst length in milliseconds (default = 100)
			</description>
		</objarg>
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="bang">
			<arglist>
				<arg name="bang" optional="1" type="bang" />
			</arglist>
			<digest>
				Click for short noise burst and white screen flash
			</digest>
			<description>
				Click for short noise burst and white screen flash
			</description>
		</method>
	</methodlist>

	<!--ATTRIBUTES-->
	<attributelist>
