<c74object name="av.catch~">

	<digest>
		Catch a signal to a matrix
	</digest>

	<description>
		A wrapper around the jit.catch~ object initialized with 3 inlets for connecting to 3 signals and generate a 3-dimensional oscilloscope (X Y Z).
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<objarg name="framesize" optional="1" type="int">
			<digest>
				Set the framesize output (default = 128)
			</digest>
			<description>
				Set the framesize output (default = 128)
			</description>
		</objarg>
		<objarg name="downsample" optional="1" type="int">
			<digest>
				Set the downsample factor (default = 2)
			</digest>
			<description>
				Set the downsample factor (default = 2)
			</description>
		</objarg>
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="bang">
			<arglist>
				<arg name="bang" optional="1" type="bang" />
			</arglist>
			<digest>
				Report the frame with the renderbang
			</digest>
			<description>
				Report the frame with the renderbang
			</description>
		</method>
		<method name="signal">
			<arglist>
				<arg name="signal" optional="1" type="signal" />
			</arglist>
			<digest>
				Signal to catch
			</digest>
			<description>
				Signal to catch
			</description>
		</method>
	</methodlist>

	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="framesize" get='0' set='1' type='int' size='2'>
			<arglist>
				<arg name="framesize" optional="1" type="int" />
			</arglist>
			<digest>
				Set the framesize output (default = 128)
			</digest>
			<description>
				Set the framesize output (default = 128)
			</description>
		</attribute>
		<attribute name="downsample" get='0' set='1' type='int' size='2'>
			<arglist>
				<arg name="downsample" optional="1" type="int" />
			</arglist>
			<digest>
				Set the downsample factor (default = 2)
			</digest>
			<description>
				Set the downsample factor (default = 2)
			</description>
		</attribute>
	</attributelist>

	<!--SEEALSO-->
	<seealsolist>
		<seealso name="av.automation~"/>
		<seealso name="av.amp~"/>
		<seealso name="av.catch~"/>
		<seealso name="av.chance"/>
		<seealso name="av.cross3~"/>
		<seealso name="av.enable"/>
