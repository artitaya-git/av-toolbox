<c74object name="av.screenshot">

	<digest>
		Display a testpattern
	</digest>

	<description>
		Display a testpattern image on a layer. Useful during mapping of beamer and to display some image with lines and colors.

		Also outputs the texture to be displayed on other gl objects such as jit.gl.cornerpin or jit.gl.meshwarp when doing projection mapping.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Timo Hoogland</metadata>
		<metadata name="tag">av-toolbox</metadata>
		<metadata name="tag">max</metadata>
		<metadata name="tag">audiovisual</metadata>
		<metadata name="tag">analysis</metadata>
		<metadata name="tag">msp</metadata>
		<metadata name="tag">jitter</metadata>
	</metadatalist>

	<!--INLETS-->
	<inletlist>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
	</outletlist>

	<!-- ARGUMENTS-->
	<objarglist>
		<!-- <objarg name="" optional="1" type="int">
			<digest>
