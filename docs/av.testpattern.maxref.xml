			<description>
			</description>
		</objarg> -->
	</objarglist>

	<!--MESSAGES-->
	<methodlist>
		<method name="int">
			<arglist>
				<arg name="int" optional="1" type="bang" />
			</arglist>
			<digest>
				Enable the testpattern
			</digest>
			<description>
				Enable the testpattern
			</description>
		</method>
		<method name="bang">
			<arglist>
				<arg name="bang" optional="1" type="jit_gl_texture" />
			</arglist>
			<digest>
				Output the testpattern as a texture
			</digest>
			<description>
				Output the testpattern as a texture
			</description>
		</method>
	</methodlist>

	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="drawto" get="1" set="1" type="symbol" size="2">
			<arglist>
				<arg name="drawto" optional="1" type="symbol" />
			</arglist>
			<digest>
				Draw to a named rendering context
			</digest>
			<description>
				Draw to a named rendering context
			</description>
		</attribute>
		<attribute name="enable" get="1" set="1" type="bool" size="2">
			<arglist>
				<arg name="enable" optional="1" type="bool" />
			</arglist>
			<digest>
				Enable the testpattern
			</digest>
			<description>
				Enable the testpattern
			</description>
		</attribute>
		<attribute name="scale" get="1" set="1" type="float" size="2">
			<arglist>
				<arg name="scale" optional="1" type="float" />
			</arglist>
			<digest>
				Scale the testpattern (default = 1)
			</digest>
			<description>
				Scale the testpattern (default = 1)
			</description>
		</attribute>
	</attributelist>

